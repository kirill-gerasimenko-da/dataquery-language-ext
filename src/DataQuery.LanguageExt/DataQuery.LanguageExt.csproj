<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <Nullable>enable</Nullable>
        <PackageVersion>0.0.3</PackageVersion>
        <Title>Opiniate dataquery approach, using Dapper, LanguageExt and Npgsql</Title>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>Dapper + Npgsql database utilities using Language.Ext</Description>
        <PackageProjectUrl>https://github.com/kirill-gerasimenko-da/dataquery-language-ext</PackageProjectUrl>
        <RepositoryUrl>https://github.com/kirill-gerasimenko-da/dataquery-language-ext</RepositoryUrl>
        <Authors>Kirill Gerasimenko</Authors>
        <PackageLicenseUrl>https://github.com/kirill-gerasimenko-da/dataquery-language-ext/blob/master/LICENSE</PackageLicenseUrl>
        <PackageTags>language-ext sql dapper</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Dapper" Version="2.0.123" />
      <PackageReference Include="LanguageExt.Core" Version="4.0.3" />
      <PackageReference Include="LanguageExt.Sys" Version="4.0.3" />
      <PackageReference Include="Marten" Version="4.1.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
      <PackageReference Include="Npgsql" Version="6.0.0" />
      <PackageReference Include="SimpleInjector" Version="5.3.2" />
      <PackageReference Include="System.Data.SqlClient" Version="4.8.3" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Marten" />
    </ItemGroup>

</Project>
